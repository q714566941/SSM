<mapper namespace="dao.INewsLabelDao">

<!-- 	<select id="" resultMap="">            和底下select一样了，直接递归调用
		select id,name,pid from newslabel where id=#{yyy}
	</select> -->                              
	
	<resultMap type="NewsLabel" id="newsLabelMapper">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<association property="parent" 
					 javaType="NewsLabel"
		             select="selectNewsLabelById"
		             column="pid"/>
	</resultMap>
	
	<select id="selectStudentById" resultMap="newsLabelMapper">
		select sid,sname,cid,cname
		from student,course,middle                     <!-- 没有middle表，这两个表没有关系 -->
	</select>
